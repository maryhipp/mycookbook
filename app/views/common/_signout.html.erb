
<% if signed_in? %>

  <%= form_for :session, url: signout_path, method: 'delete' do |f| %>
    Welcome, <%= link_to current_user.name, current_user %>!
    <%= f.submit "Sign out", id: 'signout' %>
  <% end %>

  <%= link_to "My Cookbook", user_recipes_path(current_user) %>

<% else %>
  Sign up or log in to save recipes to your cookbook!

  <%= link_to "Sign In", signin_path %> | <%= link_to "Sign up", signup_path %>

<% end %>

